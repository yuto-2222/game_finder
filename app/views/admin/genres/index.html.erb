<div class="container">
	<div class="row">
		<p class="font-weight-bold bg-secondary text-light mx-auto my-4 p-1 h4">
			Genres List
		</p>
	</div>

	<div class="row">
		<div class="col-lg-6 mx-auto">
			<%= render 'layouts/errors', obj: @genre %>
			<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
				<div class="form-group d-flex justify-content-between align-items-center text-nowrap mt-3 mb-3">
					<%= f.label :Genre, class: "font-weight-bold mx-2" %>
					<%= f.text_field :name, placeholder: "Type genre name", class: "form-control name mx-4" %>
					<%= f.submit :Create, class: 'btn btn-secondary mx-2' %>
				</div>
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-6 mx-auto">
			<table class="table">
				<thead class="bg-light">
					<tr>
						<th>Genre name</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td class="align-middle">
								<div class="ml-3">
									<%= genre.name %>
								</div>
							</td>
							<td>
								<%= link_to edit_admin_genre_path(genre), class: "btn btn-secondary" do%>
									Edit
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
