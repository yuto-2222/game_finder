<div class="container">
	<div class="row">
		<p class="font-weight-bold bg-secondary bg-secondary text-light mx-auto mt-5 p-1 h5">
			Review Editing
		</p>
	</div>

	<div class="row">
		<div class="col-6 mx-auto">
			<%= render 'layouts/errors', obj: @review %>
			<div class="text-center">
				<%= form_with model: @review, url: game_review_path(@game, @review) do |f| %>
					<div class="field my-3">
						<%= f.text_area :content, rows: '5', cols: '50', placeholder: 'Type your review here' %>
					</div>

					<div class="actions my-3">
						<%= f.submit %>
					</div>
				<% end %>
			</div>
			<div class="text-center my-3">
				<%= button_to 'Delete', game_review_path(@game, @review), method: :delete,
					data: { confirm: 'Are you sure you want to delete this review ?' }, class: "btn btn-dark" %>
			</div>
			<div class="mt-3 text-center my-3">
				<%= link_to '< Review Detail >', game_review_path(@game, @review), class: 'text-dark' %>
			</div>
		</div>
	</div>
</div>