<h2>レビュー一覧</h2>

<% reviews.each do |review| %>
  <div>
    <!--user.image-->
    <%= link_to review.user.nickname, user_path(review.user.id) %>
    <%= review.content %>
    <%= render 'usefuls/btn', review: review %>
    コメント数:<%= review.comments.count %>

    <% if user_signed_in? %>
      <% if current_user.nickname != 'ゲスト' %>
        <%= link_to 'コメントを書く', game_review_path(@game, review) %>
      <% else %>
        <%= link_to 'コメント一覧', game_review_path(@game, review) %>
      <% end %>
    <% elsif admin_signed_in? %>
      <%= button_to 'レビュー削除', game_review_path(@game, review), method: :delete,
          data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
      <%= link_to 'コメント一覧', game_review_path(@game, review) %>
    <% end %>

