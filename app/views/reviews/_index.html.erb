<% if reviews.present? %>
  <table class='table table-hover mt-3'>
  	<thead class="bg-light">
  		<tr>
  			<th></th>
  			<th>Nickname</th>
  			<th>Content</th>
  			<th>Useful</th>
  			<th>Comments</th>
  			<th></th>
  		</tr>
  	</thead>

  	<tbody>
      <% reviews.each do |review| %>
        <tr>
          <td>
            <%= link_to user_path(review.user.id) do %>
              <%= image_tag review.user.get_profile_image, size: "90x90", alt: 'user image' %>
            <% end %>
          </td>
          <td class="align-middle">
            <div class="ml-3">
              <%= link_to review.user.nickname, user_path(review.user.id), class: 'text-dark' %>
            </div>
          </td>
          <td class="align-middle">
            <div class="ml-3 table-text">
              <%= safe_join(review.content.split("\n"),tag(:br)) %>
            </div>
          </td>
          <td class="align-middle", id="useful_buttons_<%= review.id %>">
            <div class="ml-3">
              <%= render 'usefuls/btn', review: review %>
            </div>
          </td>
          <td class="align-middle">
            <div class="ml-3">
              <%= review.comments.count %>
            </div>
          </td>
          <td class="align-middle">
            <div class="ml-3">
              <%= link_to 'Comment', game_review_path(@game, review), class: 'text-dark' %>
              <% if admin_signed_in? %>
                <%= button_to 'Delete', game_review_path(@game, review), method: :delete,
                    data: { confirm: 'Are you sure you want to delete this review ?' }, class: "btn btn-dark my-2" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <div class="text-center">
    Nothing
  </div>
<% end %>