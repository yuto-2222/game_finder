<table class='table table-hover mt-3'>
	<thead class="bg-light">
		<tr>
			<th></th>
			<th>Nickname</th>
			<th>Content</th>
			<th>Useful</th>
			<!--<th>Rating</th>-->
			<th>Comments</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
    <% reviews.each do |review| %>
      <tr>
        <td>
          <%= link_to user_path(review.user.id) do %>
            <%= image_tag review.user.get_profile_image, size: "90x90" %>
          <% end %>
        </td>
        <td class="text-center align-middle">
          <%= link_to review.user.nickname, user_path(review.user.id), class: 'text-dark' %>
        </td>
        <td class="text-center align-middle">
          <%= review.content %>
        </td>
        <td class="text-center align-middle", id="useful_buttons_<%= review.id %>">
          <%= render 'usefuls/btn', review: review %>
        </td>
        <!--<td>-->
        <!--  rating-->
        <!--</td>-->
        <td class="text-center align-middle">
          <%= review.comments.count %>
        </td>
        <td class="text-center align-middle">
          <% if user_signed_in? %>
            <%= link_to 'Comment', game_review_path(@game, review), class: 'text-dark' %>
          <% elsif admin_signed_in? %>
            <%= button_to 'Delete', game_review_path(@game, review), method: :delete,
                data: { confirm: 'Are you sure you want to delete this review ?' }, class: "btn btn-dark my-2" %>
            <%= link_to 'Comment', game_review_path(@game, review), class: 'text-dark' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>