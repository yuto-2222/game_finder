<div class='container'>
	<div class='row'>
		<div class='col-6 col-md-3 mt-5'>
			<div>
				<%= render 'games/info', game: @game %>
			</div>
		</div>

		<div class='col-md-9 mt-5'>
			<div class="my-3">
				<div class="h2">Review Form</div>
			</div>
			<div>
				<%= render 'reviews/form', review: @review, game: @game, rating: @rating %>
			</div>
			<div class="mt-3">
				<%= link_to '< Reviews List >', game_reviews_path(@game) %>
			</div>
		</div>
	</div>
</div>