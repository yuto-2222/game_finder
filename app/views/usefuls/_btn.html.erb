<% if user_signed_in? %>
  <% if current_user.nickname != 'ゲスト' %>
		<% if review.was_useful_by?(current_user) %>
		  <%= link_to game_review_usefuls_path(review.game, review), method: :delete do %>
		    <i class="fa-regular fa-thumbs-up" aria-hidden="true" style="color: brown;"></i>
		    有用: <%= review.usefuls.count %>人
		  <% end %>
		<% else %>
		  <%= link_to game_review_usefuls_path(review.game, review), method: :post do %>
		    <i class="fa-regular fa-thumbs-up" aria-hidden="true"></i>
		    有用: <%= review.usefuls.count %>人
		  <% end %>
		<% end %>
	<% else %>
    useful: <%= review.usefuls.count %>人
  <% end %>
<% elsif admin_signed_in? %>
  useful: <%= review.usefuls.count %>人
<% end %>