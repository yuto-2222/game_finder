<div class="container">
  <div class="row">

    <p class="font-weight-bold bg-secondary bg-secondary text-light mx-auto mt-5 p-1 h5">
			Game Information Editing
		</p>
	</div>

	<div class="row">
		<div class="col-6 mx-auto">
			<%= render 'layouts/errors', obj: @game %>
			<%= render 'form', game: @game %>
			<div class="mt-3 text-center">
				<% if admin_signed_in? %>
          <%= button_to 'Delete', game_path(@game), method: :delete,
              data: { confirm: 'Are you sure you want to delete this game ?' }, class: "btn btn-danger my-2" %>
        <% end %>
				<%= link_to '< Reviews List >', game_reviews_path(@game) %>
			</div>
		</div>
	</div>
</div>