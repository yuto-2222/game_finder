<div class='container'>
	<% if current_user.nickname == 'ゲスト' %>
    <div class="text-center mt-4 mb-2">
			ゲストの方は
			<%= link_to "こちら", users_guest_sign_out_path, method: :post %>
		  からサインアップできます
		</div>
  <% end %>
  <div class='row'>
    <div class='col-3 mt-5'>
			<div>
				<%= render 'layouts/genre', genres: @genres %>
			</div>
		</div>

		<div class='col-9 mt-5'>
    	<div class="my-3">
				<span class="h2 mr-2">ゲーム一覧</span> <span>(全<%= @games.count %>件)</span>
				<div class="ml-2">
					<% if user_signed_in? %>
						<% if current_user.nickname != 'ゲスト' %>
							<%= link_to 'ゲームを追加', new_game_path %>
						<% end %>
					<% elsif admin_signed_in? %>
						<%= link_to 'ゲームを追加', new_game_path %>
					<% end %>
				</div>
			</div>
			<div>
				<%= link_to '新しい順', games_path(latest: "true") %> |
				<%= link_to '古い順', games_path(earliest: "true") %> |
				<%= link_to '人気順', games_path(popular: "true") %>
			</div>
			<%= render 'index', games: @games %>

			<div class="d-flex justify-content-center">
				<p>
					<%= paginate @games, theme: 'bootstrap-5' %>
				</p>
			</div>
		</div>
	</div>
</div>