<table class=" table border border-dark", style="width:80%;">
  <tr>
    <th class="text-center align-middle border-bottom border-dark">ジャンル検索</th>
  </tr>

  <%= form_with url: genre_search_path, method: :get do |f| %>
    <% genres.each do |genre| %>
      <tr>
        <td class="border border-0 align-middle"><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get %></td>
      </tr>
    <% end %>
  <% end %>
</table>