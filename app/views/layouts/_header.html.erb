<header class="border-bottom border-dark">
  <div class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <div class="col-3" style="right:100px;">
         <a class="navbar-brand" href="/" ><span>GAME FINDER</span></a>
      </div>
      <div class="col-9 mt-1">
        <div class="row">
          <div class="col-12">
            <div class="d-flex justify-content-end">
              <% if user_signed_in? %>
                <li class="d-flex mr-4">
                  <%= link_to "マイページ", user_path(current_user), class: "btn btn-outline-secondary" %>
                </li>
                <li class="d-flex mr-4">
                  <%= link_to "ゲーム一覧", games_path, class: "btn btn-outline-secondary" %>
                </li>
                <li class="d-flex mr-4">
                  <%= link_to notifications_path, class: "btn btn-outline-secondary" do %>
                    <% if current_user.notifications.where(checked: false).exists? %>
                      <i class="fa-sharp fa-solid fa-bell fa-beat" style="color: #f2ee7d;"></i>
                    <% else %>
                      <i class="fa-sharp fa-solid fa-bell"></i>
                    <% end %>
                    通知一覧
                  <% end %>
                </li>
                <li class="d-flex">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary" %>
                </li>

              <% elsif admin_signed_in? %>
                <li class="d-flex mr-4">
                  <%= link_to "ゲーム一覧", games_path, class: "btn btn-outline-secondary" %>
                </li>
                <li class="d-flex mr-4">
                  <%= link_to 'ジャンル', admin_genres_path, class: "btn btn-outline-secondary" %>
                </li>
                <li class="d-flex">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary" %>
                </li>

              <% else %>
                <li class="d-flex mr-4">
                  <%= link_to "About", about_path, class: "btn btn-outline-secondary" %>
                </li>
                <li class="d-flex mr-4">
                  <%= link_to "サインアップ", new_user_registration_path, class: "btn btn-outline-secondary" %>
                </li>
                <li class="d-flex">
                  <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-secondary" %>
                </li>
              <% end %>
            </div>
          </div>
          <div class="col-12">
            <div class="mt-3 text-right">
              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :content, placeholder: "ゲーム名" %>
                <%= f.submit "検索" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>