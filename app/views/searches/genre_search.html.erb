<div class='container'>
	<% if user_signed_in? %>
		<% if current_user.nickname == 'ゲスト' %>
	    <div class="text-center mt-4 mb-2">
				Sign up
				<%= link_to "here", users_guest_sign_out_path, method: :post %>
			</div>
	  <% end %>
  <% end %>
  <div class='row'>
    <div class='col-md-3 mt-5'>
			<div>
				<%= render 'layouts/genre', genres: @genres %>
			</div>
		</div>

    <div class='col-md-9 mt-5'>
    	<div class="my-3">
    		<span class="h2 mr-2">「<%= @genre.name %>」Games List</span> <span>(全<%= @games.count %>件)</span>
    		<div class="ml-2">
					<% if user_signed_in? %>
						<% if current_user.nickname != 'ゲスト' %>
							<%= link_to 'Add game', new_game_path %>
						<% end %>
					<% elsif admin_signed_in? %>
						<%= link_to 'Add game', new_game_path %>
					<% end %>
				</div>
    	</div>
    	<div>
	    	<%= link_to 'New', genre_search_path(genre_id: @genre.id, latest: "true") %> |
				<%= link_to 'Old', genre_search_path(genre_id: @genre.id, earliest: "true") %> |
				<%= link_to 'Popular', genre_search_path(genre_id: @genre.id, popular: "true") %>
    	</div>
    	<%= render 'games/index', games: @games %>

      <div class="d-flex justify-content-center">
  			<p>
    			<%= paginate @games, theme: 'bootstrap-5' %>
	  		</p>
 			</div>

		</div>
	</div>
</div>